@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Google fonts cdn -->
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">

<!-- Font awesome cdn -->
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
<!-- Bootstrap cdn -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

<!-- style sheet -->
<link rel="stylesheet" type="text/css" href="~/css/registerStyle.css">

<!-- Grid container -->
<div class="container">
    <div class="row justify-content-between">
        <div class="col-sm-12 col-md-12 col-lg-5 infoGraphic">
            <img src="~/img/access.svg" alt="infographic" style="width:100%">
        </div>

        <!-- Form for user details -->
        <div class="col-sm-12 col-md-12 col-lg-6 ">
            <p id="signUp">Sign up with us!</p>
            <p id="callAction">Creating web receipts for your customers is easier than before, send in as a PDF or send the weblink, either ways, it’s easier than you think.</p>
            <!-- Form for user details -->
            <form method="GET">
                <input class="userDetails" type="text" name="firstname" placeholder="First Name"><br><br>

                <input class="userDetails" type="text" name="lastname" placeholder="Last Name"><br><br>

                <input class="userDetails" type="email" name="email" placeholder="Email Address"><br><br>

                <div class="input-icon">
                    <input type="password" id="password-field" name="password" placeholder="Enter Your Password">
                    <i class="fas fa-eye icon" id="pass-status" onClick="viewPassword()"></i>
                </div><br>

                <div class="input-icon">
                    <input type="password" id="confirmPassword-field" name="password" placeholder="Confirm Password">
                    <i class="fas fa-eye icon" id="check-status" onClick="confirmPassword()"></i>
                </div><br>

                <!-- Submission/Register button -->
                <button id="button" type="submit" name="submit" asp-area="Identity" asp-page="Account/Login.cshtml">Register to start now!</button>
            </form>
            <p id="callAction2">Already have an account?<span id="nextPage"><a href="#"> Sign in here</a></span></p>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/js/loginScript.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
