@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Grid container -->
<div class="container">
    <div class="row justify-content-between">
        <div class="col-sm-12 col-md-12 col-lg-5 infoGraphic">
            <img src="~/img/access.svg" alt="infographic" style="width:100%">
        </div>

        <div class="col-sm-12 col-md-12 col-lg-6 ">
            <p id="signUp">Login in to your account</p>
            <p id="callAction">Creating web receipts for your customers is easier than before, send in as a PDF or send the weblink, either ways, it’s easier than you think.</p>
            <!-- Form for user details -->
            <form>
                <input class="userDetail" type="email" name="email" placeholder="Email Address"><br><br>

                <div class="input-icon">
                    <input type="password" id="password-field" name="password" placeholder="Password">
                    <i class="fas fa-eye icon" id="check-status" onClick="viewPassword()"></i>
                </div><br>

                <!-- Login button -->
                <button id="button" type="submit" name="submit">Login to your account</button>
            </form>
            <p id="callAction2">Can’t remember your password?</p>
            <p id="reset"><a href="#">Reset it here</a></p>
        </div>

    </div>
</div>

<script type="text/javascript" src="~/js/loginScript.js"></script>p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
