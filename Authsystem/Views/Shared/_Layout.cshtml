</head>
<body>

    <!-- Header -->
    <div class="section-container">
        <section class="wrap-header-intro">
            <div class="section-header-navigation" id="navigation">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DigiReceipts</a>
                <div class="section-nav">
                    <a class="nav-login" asp-area="Identity" asp-page="Account/Login">Login</a>
                    <a class="nav-register" asp-area="Identity" asp-page="/Account/Register">Register to start now!</a>
                    <a href="javascript:void(0);" class="icon" onclick="navbar()">
                        <i class="fa fa-bars"></i>
                    </a>
                </div>
            </div>
        </section>
    </div>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <section class="footer-items">
        <div class="footer">
            <div class="footer-team">
                Created by team-enya
            </div>
            <div class="footer-privacy">
                Privacy Policy | Terms and Conditions
            </div>
        </div>
    </section>
</body>
</html>

